<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=no"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>积分排名</title>
    <link rel="stylesheet" href="/css/list.css" />
  </head>
  <body>
    <%if(ranks.length==0){%>
    <div
      style="text-align: center;height: 100px;justify-content: center;line-height: 100px;"
    >
      <text>暂无排名</text>
    </div>
    <%}%>
    <div class="list_menu">
      <% ranks.forEach((item,index) => {%>
      <div class="list_item">
        <div class="index">
          <text class="list_index">
            <%= index + 1%>
          </text>
        </div>
        <img
          src="<%=item.headimgurl%>"
          class="img-circle"
          style="width: 3em ;height:3em;border-radius: 50%;"
        />
        <div style="float: right;">
          <text class="list_title">
            <%=item.nickname%>
          </text>
          <br />
          <text class="list_title">
            积分：<%=item.integralNum%>
          </text>
        </div>
      </div>
      <% })%>
    </div>
    <script src="https://cdn.bootcss.com/zepto/1.0rc1/zepto.min.js"></script>
    <script></script>
  </body>
</html>
